<% if user_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field "content" %>
      <%= f.select "model", {"User" => "user", "Book" => "book"} %>
      <%= f.select "method", {"完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"} %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
<% end %>



