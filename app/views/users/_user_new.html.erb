<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %><br>

  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
      <tr>
        <%= render 'relationships/count', user: @user %>
      </tr>
      <tr>
        <th><%= render 'relationships/follow', user: @user %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <% if user == current_user %>
      <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    <% else %>
      <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block' do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    <% end %>
  </div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model: book do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title, class: 'form-control book_title' %>
    </div>
    <div class="form-group">
      <label for="book_opinion">Opnion</label>
      <%= f.text_area :body, class: 'form-control book_body' %>
    </div>
    <!-- 評価部分 -->
    <div class="form-group" id="star">
      <%= f.label :rate,'評価 ', class:'col-form-label' %>
      <%= f.hidden_field :rate, id: :review_star %>
    </div>

    <div class="form-group">
      <%= f.submit 'Create Book',class: 'btn btn-success' %>
    </div>

  <!-- 評価javascript -->
  <script>
    $('#star-rate<%= book.id %>').empty();
    $('#star').raty({
      size     : 36,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      scoreName: 'book[rate]',
      half: true,
    });
  </script>
  <% end %>
</div>