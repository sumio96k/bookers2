<h1>User info</h1>

<% if @user.errors.any? %>
    <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<%= form_with model: @user do |f| %>
    <label>Name</label>
    <%= f.text_field :name %>
    <label>Image</label>
    <%= f.file_field :profile_image, placeholder: 'プロフィール画像', accept: "image/*" %>
    <label>Introduction</label>
    <%= f.text_area :introduction %>
    <%= f.submit 'Update' %>
<% end %>

