<h1>User info</h1>


<%= form_with model: @user do |f| %>
<label>Name</label>
<%= f.text_field :name %>
<label>Image</label>
<%= f.file_field :profile_image, placeholder: 'プロフィール画像', accept: "image/*" %>
<label>Introduction</label>
<%= f.text_area :introduction %>
<%= f.submit 'Update' %>
<% end %>

