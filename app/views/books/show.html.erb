<div class="container">
  <div class="row">
  <%= render 'users/user_new', user: current_user, book: @books %>

    <div class="col-md-8 offset-md-1">
      <% if @comment.errors.any? %>
        <% @comment.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      <% end %>

      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
            <%= link_to book_path(@book.id) do %>
              <%= @book.title %>
            <% end %>
            </td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to 'Edit', edit_book_path, class:'btn btn-sm btn-success' %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to 'Destroy', book_path, method: :delete, data: {confirm: "本当にけしますか？"}, class:'btn btn-sm btn-danger' %>
              <% end %>
            </td>

            <!-- いいね機能 -->
            <td>
              <% if @book.favorited_by?(current_user) %>
                <td>
                  <%= link_to book_favorites_path(@book), method: :delete do %>
                   ♥<%= @book.favorites.count %>
                  <% end %>
                </td>
              <% else %>
                <td>
                  <%= link_to book_favorites_path(@book), method: :post do %>
                    ♥<%= @book.favorites.count %>
                  <% end %>
                </td>
              <% end %>
            </td>
            <!--　ここまで -->

            <p>コメント数:<%= @book.book_comments.count %></p>

            <!-- コメント部分 -->
            <% @book.book_comments.each do |book_comment| %>
              <td>
                <%= image_tag book_comment.user.get_profile_image(50,50) %>
              </td>
              <td><%= book_comment.comment %></td>
              <td>
                <% if book_comment.user == current_user %>
                  <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete %>
                <% end %>
              </td>
            <% end %>

            <div>
              <%= form_with model: [@book, @book_comment] do |f| %>
              <div class="form-group">
                <%= f.text_area :comment, class: 'form-control book_comment' %>
              </div>

              <div class="form-group">
                <%= f.submit 'Comment', class: 'btn btn-success' %>
              </div>
              <% end %>
            </div>
            <!-- ここまで -->

          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>