<h1>Book detail</h1>
<div>
  <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p><%= @book.user.name %></p>
  <%= link_to book_path(@book.id) do %>
    <p><%= @book.title %></p>
  <% end %>
  <p><%= @book.body %></p>

  <% if @book.user == current_user %>
    <%= link_to 'Edit', edit_book_path %>
  <% end %>

  <% if @book.user == current_user %>
    <%= link_to 'Destroy', book_path, method: :delete %>
  <% end %>
</div>

<%= render 'users/user_new', user: @user, book: @book %>
